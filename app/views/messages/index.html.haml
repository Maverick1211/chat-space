.chat
  = render partial: 'common/chat-side', locals: {groups: @groups}
  .chat-main
    .chat-header
      .chat-header__left
        %h2 #{@group.name}route
        %i.fa_fa-pencil-square-o
        %p.chat-header__users
        member:
        - @users.each do |user|
          = user.name
      .chat-header__right
        .chat-header__right__edit-btn
          =link_to "edit", edit_group_path(@group)
    .chat-body
      %ul.chat-messages
        %li.chat-message
          .chat-message__header
            %p.chat-message__header__name user-name
            %p.chat-message__header__time 2020/1/1 00:00:00
          %p.chat-message__body あああああ
          %br/
    .chat-footer
      .chat-footer__body
        %textarea#message_body{ placeholder: "type a message" }
        %label.chat-footer__body__file
          %i.fa.fa-image
      %input{ value: "Send", type: "submit" }
